<section class="flash">
{{#if flash_success }}
  <div class="alert alert-success alert-dismissable" role="alert">
    <span class="alert-icon"><i class="fa fa-check-circle" aria-hidden="true"></i></span>
    <span class="alert-text">{{#each flash_success }}{{{ this }}}{{/each }}</span>
    <button class="close" data-dismiss="alert" aria-label="close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
{{/if }}

{{#if flash_error }}
  <div class="alert alert-danger alert-dismissable" role="alert">
    <span class="alert-icon"><i class="fa fa-exclamation-circle" aria-hidden="true"></i></span>
    <span class="alert-text">{{#each flash_error }}{{{ this }}}{{/each }}</span>
    <button class="close" data-dismiss="alert" aria-label="close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
{{/if }}

{{#if flash_info }}
  <div class="alert alert-info alert-dismissable" role="alert">
    <span class="alert-icon"><i class="fa fa-info-circle" aria-hidden="true"></i></span>
    <span class="alert-text">{{#each flash_info }}{{{ this }}}{{/each }}</span>
    <button class="close" data-dismiss="alert" aria-label="close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
{{/if }}
</section>