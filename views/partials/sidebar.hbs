<nav id="sidebar">
  <section class="sidebar-header">
    <p><img src="/img/gm_logo.png" alt="Goalmine logo" height="140px" width="140px" /></p>
    {{#if user.image}}<img src="{{ user.image }}" />{{/if }}
    {{#if user }}
    {{ user.username }} 
    {{#if user.admin }}
    <span class="badge badge-warning">admin</span> 
    {{/if }}  
    <br>
    <a href="/logout">logout</a>
    {{ else }}
    <br>
    <a href="/login">login</a>
    {{/if }}    
  </section>

  <p>{{ user.balance.goalmine.rank }}</p>

  {{#if user.goalmine }}
  <section>
    <h5>Goalmine</h5>
    <a href="/predictions/602">Wk 602</a>
  </section>
  {{/if }}

  {{#if user.tipping }}
  <section>
    <h5>Tipping</h5>
    <a href="/bets/602">Wk 602</a>
  </section>
  {{/if }}

  {{#if user.killer }}
  <section>
    <h5>Killer</h5>
    <a href="/killers/2">Killer game 2</a>
  </section>
  {{/if }}

  {{#if user.admin }}
  <section>
    <h5>Admin</h5>
    <ul>
      <li>{{#if pending }}<a href="/admin/pending">Pending matches</a>{{ else }}No matches pending{{/if }}</li>
      <li><a href="/admin/email">Send bulk email</a></li>
      <li><a href="/killers/add">Add new killer game</a></li>
    </ul>
  </section>
  {{/if }}

</nav>
